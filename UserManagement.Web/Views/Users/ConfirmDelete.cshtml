@model UserManagement.Web.Models.Users.UserDetailsViewModel

<h2>Confirm Delete</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <td>@Html.DisplayFor(model => model.Id)</td>
        </tr>
        <tr>
            <th>Forename</th>
            <td>@Html.DisplayFor(model => model.Forename)</td>
        </tr>
        <tr>
            <th>Surname</th>
            <td>@Html.DisplayFor(model => model.Surname)</td>
        </tr>
        <tr>
            <th>Date of Birth</th>
            <td>@Html.DisplayFor(model => model.DateOfBirth)</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Html.DisplayFor(model => model.Email)</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>@(Model.IsActive ? "Active" : "Not Active")</td>
        </tr>
    </table>
</div>

<div>
    <p>Are you sure you want to delete this User?</p>
</div>

<form asp-controller="Users" asp-action="ConfirmDelete" asp-route-id="@Model.Id" asp-route-email="@Model.Email" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary asp-controller="Users" asp-action="List">Cancel</a>
    </div>
</form>
